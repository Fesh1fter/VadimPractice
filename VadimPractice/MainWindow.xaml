        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VadimPractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="searchTextBox" HorizontalAlignment="Left" Margin="10,315,0,0" TextWrapping="Wrap" Text="введите параметры" VerticalAlignment="Top" Width="257" Height="32" TextChanged="TextBox_TextChanged"/>
        <Button Content="найти" HorizontalAlignment="Left" Margin="272,316,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.235,1.297" Height="31" Width="81" Click="SearchButton_Click"/>
        <ListBox x:Name="resultsListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,123"/>

    </Grid>
</Window>
